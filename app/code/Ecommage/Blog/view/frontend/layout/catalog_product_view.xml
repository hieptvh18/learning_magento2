<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    <head>
        <script src="Ecommage_Blog::js/slick-slider.js" async="async" />
    </head>
    <body>
        <referenceContainer name="content">
            <container name="product.slider.blog" htmlTag="div" htmlClass="product slider blog" after="product.info.details">
                <block class="Ecommage\Blog\Block\SliderBlog" name="slider_blog"/>
            </container>
        </referenceContainer>
    </body>
</page>
